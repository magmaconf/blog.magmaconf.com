= render @post, index_view: false

#disqus_thread
  :javascript
    var disqus_shortname = 'blog-testing';
    (function() {
      var dsq = document.createElement('script');
      dsq.type = 'text/javascript';
      dsq.async = true;
      dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
      (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();

%noscript
  Please enable JavaScript to view the
  %a{ href: 'http://disqus.com/?ref_noscript' } comments powered by Disqus.

%a.dsq-brlink{ href: 'http://disqus.com' }
  comments powered by
  %span.logo-disqus Disqus

- content_for :meta do
  %meta{ property: 'og:title', content: "#{@post.title}" }
  %meta{ property: 'og:description', content: "#{@post.title}" }
  %meta{ property: 'og:url', content: "#{post_url(*@post.url_params).html_safe}" }
  %meta{ property: 'og:image', content: 'http://assets0.crowdint.com/assets/logo/ocre.png' }
  %meta{ property: 'og:type', content: 'blog' }

- content_for :page_title do
  = ":: #{ @post.title }"
